<Window x:Class="fr.avh.braille.addin.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:fr.avh.braille.addin"
             mc:Ignorable="d" Width="500" Height="400"
             Title="Journal du traitement braille">
    <Grid>
        <ProgressBar x:Name="ProgressIndicator" Height="22" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ProgressMessages" Margin="10,37,10,10" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
