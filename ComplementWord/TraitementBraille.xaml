<Window x:Class="fr.avh.braille.addin.TraitementBraille"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:fr.avh.braille.addin"
        mc:Ignorable="d"
        Width="500"
        Height="400"
        Title="Traitement pour le braille">
    <Grid>
        <ProgressBar x:Name="ProgressIndicator"
                     Height="22"
                     Margin="5,10,15,0"
                     VerticalAlignment="Top" />
        <TextBox x:Name="ProgressMessages"
                 Margin="5,37,10,45"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalScrollBarVisibility="Auto" />
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="5"
                    Height="35"
                    FlowDirection="RightToLeft">
            <Button Margin="5"
                    Padding="5,0,5,0" IsEnabled="False"
                    x:Name="LancerParcourMots"
                    Click="LancerParcourMots_Click">Parcourir les mots</Button>
            <Button Margin="5"
                    Padding="5,0,5,0"
                    IsEnabled="False"
                    x:Name="LancerAnalysePhrases"
                    Click="LancerAnalysePhrases_Click">Détecter les phrases étrangères</Button>
            <Button Margin="5"
                    Padding="5,0,5,0"
                    IsEnabled="False"
                    x:Name="LancerChargementDictionnaire"
                    Click="LancerChargementDictionnaire_Click">Charger un fichier de décision</Button>
        </StackPanel>
    </Grid>
</Window>
